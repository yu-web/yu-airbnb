<div class="row">
  <div class="col-3">
    <div class="card">
      <div class="card-body">
        <%= render "room_menu" %>
      </div>
    </div>
  </div>

  <div class="col-9">
    <div class="card">
      <div class="card-header bg-success text-light">
        Listing
      </div>
      <div class="card-body">
        	<div clas="container">
			    <%= form_for @room do |f| %>
					<div class="row text-center">
						<div class="col-4">
							<div class="form-group select">
								<label>Home type</label><br>
								<%= f.select :home_type,[["Apartment","Apartment"],["House","House"],["Bed & Breakfast","Bed & Breakfast"]],id:"Home_type",prompt:"Select...",class: "form-control" %>
							</div>
						</div>

						<div class="col-4">
							<div class="form-group">
								<label>Room type</label><br>
								<%= f.select :room_type,[["Entire","Entire"],["Private","Private"],["Shared","Shared"]],id:"room_type",prompt:"Select...",class: "form-control" %>
							</div>
						</div>

						<div class="col-4">
							<div class="form-group">
								<label>Accommodate</label><br>
								<%= f.select :accommodate,[["1",1],["2",2],["3",3],["4",4]],id:"accommodate",prompt:"Select...",class: "form-control" %>
							</div>
						</div>

						<div class="col-4">
							<div class="form-group">
								<label>Bedroom</label><br>
								<%= f.select :bedroom,[["1",1],["2",2],["3",3],["4",4]],id:"bedroom",prompt:"Select...",class: "form-control" %>
							</div>
						</div>

						<div class="col-4">
							<div class="form-group">
								<label>Bathroom</label><br>
								<%= f.select :bathroom,[["1",1],["2",2],["3",3],["4",4]],id:"bathroom",prompt:"Select...",class: "form-control" %>
							</div>
						</div>
					</div>
					<div class="text-center">
						<%= f.submit "Create My Room",class: "btn btn-primary mt-3" %>
					</div>
				<% end %>
			</div>
        
      </div>
    </div>
  </div>

</div>
