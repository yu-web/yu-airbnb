<div class="card">
	<div class="card-header">
		Create your beautiful places
	</div>
	<div class="card-body">
		<div clas="container">
			<%= form_for @room do |f| %>
				<div class="row">
					<div class="col-4">
						<div class="form-group">
							<label>Home type</label>
							<%= f.select :home_type,[["Apartment","Apartment"],["House","House"],["Bed & Breakfast","Bed & Breakfast"]],id:"Home_type",prompt:"Select...",class: "form-control" %>
						</div>
					</div>

					<div class="col-4">
						<div class="form-group">
							<label>Room type</label>
							<%= f.select :room_type,[["Entire","Entire"],["Private","Private"],["Shared","Shared"]],id:"room_type",prompt:"Select...",class: "form-control" %>
						</div>
					</div>

					<div class="col-4">
						<div class="form-group">
							<label>Accommodate</label>
							<%= f.select :accommodate,[["1",1],["2",2],["3",3],["4",4]],id:"accommodate",prompt:"Select...",class: "form-control" %>
						</div>
					</div>

					<div class="col-4">
						<div class="form-group">
							<label>Bedroom</label>
							<%= f.select :bedroom,[["1",1],["2",2],["3",3],["4",4]],id:"bedroom",prompt:"Select...",class: "form-control" %>
						</div>
					</div>

					<div class="col-4">
						<div class="form-group">
							<label>Bathroom</label>
							<%= f.select :bathroom,[["1",1],["2",2],["3",3],["4",4]],id:"bathroom",prompt:"Select...",class: "form-control" %>
						</div>
					</div>
				</div>
				<div>
					<%= f.submit "Create My Room",class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>