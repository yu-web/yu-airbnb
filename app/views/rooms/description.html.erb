<div class="row">
	<div class="col-3">
		<div class="card">
			<div class="card-body">
				<%= render "room_menu" %>
			</div>
		</div>
	</div>

	<div class="col-9">
		<div class="card">
			<div class="card-header bg-success text-light">
				Description
			</div>
			<div class="card-body">
				<div class="container">
					<%= form_for @room do |f| %>
						<div class="form-group">
							<label>Listing name</label>
							<%= f.text_field :listing_name,placeholder: "What is your listing name?",class:"form-control",required: true %>
						</div>

						<div class="form-group">
							<label>Summary</label>
							<%= f.text_area :summary,placeholder: "Summary of your house",class:"form-control",rows: 5,required: true %>
						</div>

						<div class="text-center">
							<%= f.submit "Save",class: "btn btn-primary mt-2 w-25" %>
						</div>
					<% end %>
				</div>
				
			</div>
		</div>
	</div>

</div>

