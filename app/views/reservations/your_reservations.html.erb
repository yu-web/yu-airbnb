<div class="row">
	<div class="col-3">
      	<div class="card">
		   <div class="card-body">
        		<%= render "rooms/rooms_manage_list" %>
      		</div>
  	  	</div>
    </div>

    <div class="col-9">
      	<div class="card">
		    <h5 class="card-header text-center">Your Reservations</h5>
			<div clss="card-body">
			    <div class="container mt-3 mb-3">
					<% @rooms.each do |room|%>
                		<% room.reservations.each do |reservation| %>
							<div class="row room_list mt-3">
								<div class="col-2">
									<%= reservation.start_date.strftime('%v') %>
								</div>
								<div class="col-3">
									<% if reservation.room.photos.any? %>
										<%= image_tag reservation.room.photos.first.image.url,class:"index_image" %>
									<% else %>
										<div class="text-center"><i class="fas fa-times-circle fa-3x"></i></div>
									<% end %>
								</div>
								<div class="col-4">
									<h5><%= link_to reservation.room.listing_name,"#",class: "#" %></h5>
									<span>
										<%= image_tag avatar_url(reservation.user),class: "rounded-circle avatar-small mr-1" %>
										<%= link_to reservation.user.fullname,"#",class: "#" %>
									</span>
								</div>
								<div class="col-3">
									<%= link_to "Review Guest","#",class: "btn btn-primary btn-block" %>
								</div>
							</div>
						<% end %>
					<% end %>
			    </div>
		  	</div>
	  	</div>


    </div>
</div>
