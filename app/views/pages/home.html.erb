<div class="row">
	<div class="col-7 banner">
		<h1><span class="text-danger">Airbnb</span> Book unique homes and experiences a city like a local.</h1>
	</div>
</div>

<%= form_tag search_path,method: :get do %>
	<div class="row">
		<div class="col-6">
			<%= text_field_tag :search,params[:search],placeholder: "Where are you going?",class:"form-control"  %>
		</div>
		<div class="col-3">
			<%= text_field_tag :start_date,params[:start_date],placeholder: "Start date",class:"form-control"  %>
		</div>
		<div class="col-3">
			<%= text_field_tag :end_date,params[:end_date],placeholder: "End date",class:"form-control"  %>
		</div>
	</div><br><br>

	
	<div class="row">
		<div class="col-4 mx-auto">
			<%= submit_tag "search",class:"btn btn-primary btn-block" %>
		</div>
	</div>
<% end %>

<div><h3>Homes</h3></div>
<div class="row">
	<%= render "rooms/room_list" %>
</div>

<br>
<div><h3>Cities</h3></div>
<div class="row">
	<div class="col-3">
		<a href ="/search?utf8=✓&search=paris">
			<div class="discovery-card" style="background-image: url('/assets/1.jpg');"></div>
		</a>
	</div>
	<div class="col-3">
		<a href ="/search?utf8=✓&search=miami">
			<div class="discovery-card" style="background-image: url('/assets/2.jpg');"></div>
		</a>
	</div>
	<div class="col-3">
		<a href ="/search?utf8=✓&search=london">
			<div class="discovery-card" style="background-image: url('/assets/3.jpg');"></div>
	</div>
	<div class="col-3">
		<a href ="/search?utf8=✓&search=los+angeles">
			<div class="discovery-card" style="background-image: url('/assets/4.jpg');"></div>
		</a>
	</div>
</div><br><br>

<script>
	$('#start_date').datepicker({
      	dateFormat: 'dd-mm-yy',
		minDate: 0,
		maxDate: '3m',
		onSelect: function(selected){
			$('#end_date').datepicker("option","minDate",selected);
		}
    });
	
	$('#end_date').datepicker({
      	dateFormat: 'dd-mm-yy',
		minDate: 0,
		maxDate: '3m',
		onSelect: function(selected){
			$('#start_date').datepicker("option","maxDate",selected);
		}
    });		
			
			
</script>